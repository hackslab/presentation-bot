<!DOCTYPE html>
<html>
<head>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');
        
        * {
            box-sizing: border-box;
        }
        
        body {
            margin: 0;
            padding: 0;
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #0f0f0f;
            color: #ffffff;
            -webkit-print-color-adjust: exact;
        }
        
        .slide {
            width: 1122px;
            height: 793px;
            position: relative;
            overflow: hidden;
            page-break-after: always;
            display: flex;
            flex-direction: column;
            background: linear-gradient(160deg, #0f0f0f 0%, #1a1a2e 50%, #16213e 100%);
            color: white;
            padding: 55px 65px;
        }

        .slide:last-child {
            page-break-after: auto;
        }

        /* Aesthetic Background Elements */
        .glow-orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            opacity: 0.4;
        }

        .orb-1 {
            width: 400px;
            height: 400px;
            top: -150px;
            right: -100px;
            background: linear-gradient(135deg, #6366f1, #a855f7);
        }

        .orb-2 {
            width: 300px;
            height: 300px;
            bottom: -100px;
            left: -80px;
            background: linear-gradient(135deg, #06b6d4, #3b82f6);
        }

        .grid-pattern {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(circle at 1px 1px, rgba(255,255,255,0.03) 1px, transparent 0);
            background-size: 50px 50px;
        }

        .corner-accent {
            position: absolute;
            width: 200px;
            height: 200px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }

        .corner-1 { top: -100px; left: -100px; }
        .corner-2 { bottom: -100px; right: -100px; width: 250px; height: 250px; }

        .slide-header {
            margin-bottom: 35px;
            position: relative;
            z-index: 10;
        }

        .header-accent {
            width: 60px;
            height: 4px;
            background: linear-gradient(90deg, #6366f1, #a855f7, #ec4899);
            border-radius: 2px;
            margin-bottom: 20px;
        }

        h1 {
            font-size: 48px;
            margin: 0;
            color: #ffffff;
            font-weight: 800;
            letter-spacing: -1px;
            line-height: 1.15;
            background: linear-gradient(135deg, #ffffff 0%, #a5b4fc 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Default Content (Full Width) */
        .slide-content {
            font-size: 22px;
            line-height: 1.65;
            color: rgba(255, 255, 255, 0.85);
            flex-grow: 1;
            position: relative;
            z-index: 10;
        }

        .slide-content p {
            margin: 0 0 18px 0;
            max-width: 900px;
        }

        .slide-content ul {
            padding-left: 0;
            list-style: none;
            margin: 0;
        }

        .slide-content li {
            margin-bottom: 16px;
            padding-left: 40px;
            position: relative;
        }

        .slide-content li::before {
            content: '';
            position: absolute;
            left: 0;
            top: 8px;
            width: 20px;
            height: 20px;
            background: linear-gradient(135deg, #6366f1, #a855f7);
            border-radius: 6px;
            opacity: 0.8;
        }

        /* Split Layout for Images */
        .slide-body-split {
            display: flex;
            gap: 50px;
            flex-grow: 1;
            align-items: center;
            position: relative;
            z-index: 10;
        }

        .split-text {
            flex: 1;
            font-size: 18px;
            line-height: 1.7;
            color: rgba(255, 255, 255, 0.85);
        }

        .split-text p {
            margin: 0 0 14px 0;
        }

        .split-text ul {
            padding-left: 0;
            list-style: none;
            margin: 0;
        }

        .split-text li {
            margin-bottom: 14px;
            padding-left: 32px;
            position: relative;
        }

        .split-text li::before {
            content: '';
            position: absolute;
            left: 0;
            top: 6px;
            width: 16px;
            height: 16px;
            background: linear-gradient(135deg, #6366f1, #a855f7);
            border-radius: 4px;
            opacity: 0.8;
        }

        .split-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .image-container {
            position: relative;
        }

        .image-container::before {
            content: '';
            position: absolute;
            top: -8px;
            left: -8px;
            right: -8px;
            bottom: -8px;
            background: linear-gradient(135deg, #6366f1, #a855f7, #ec4899);
            border-radius: 20px;
            opacity: 0.5;
            filter: blur(15px);
        }

        .split-image img {
            position: relative;
            max-width: 100%;
            max-height: 470px;
            border-radius: 16px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.4);
            object-fit: cover;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .slide-footer {
            position: absolute;
            bottom: 30px;
            left: 65px;
            right: 65px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 10;
        }

        .footer-left {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .footer-dot {
            width: 8px;
            height: 8px;
            background: linear-gradient(135deg, #6366f1, #a855f7);
            border-radius: 50%;
        }

        .footer-text {
            font-size: 12px;
            color: rgba(255, 255, 255, 0.4);
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 500;
        }

        .slide-number {
            font-size: 14px;
            font-weight: 700;
            color: rgba(255, 255, 255, 0.3);
            padding: 8px 16px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.02);
        }
    </style>
</head>
<body>
    {{#each slides}}
    <div class="slide">
        <div class="glow-orb orb-1"></div>
        <div class="glow-orb orb-2"></div>
        <div class="grid-pattern"></div>
        <div class="corner-accent corner-1"></div>
        <div class="corner-accent corner-2"></div>
        
        <div class="slide-header">
            <div class="header-accent"></div>
            <h1>{{this.title}}</h1>
        </div>
        {{#if this.imageUrl}}
        <div class="slide-body-split">
            <div class="split-text">
                {{{this.content}}}
            </div>
            <div class="split-image">
                <div class="image-container">
                    <img src="{{this.imageUrl}}" alt="{{this.title}} image">
                </div>
            </div>
        </div>
        {{else}}
        <div class="slide-content">
            {{{this.content}}}
        </div>
        {{/if}}
        <div class="slide-footer">
            <div class="footer-left">
                <div class="footer-dot"></div>
                <span class="footer-text">{{../topic}}</span>
            </div>
            <div class="slide-number">{{addOne @index}}</div>
        </div>
    </div>
    {{/each}}
</body>
</html>
