<!DOCTYPE html>
<html>
<head>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');
        
        * {
            box-sizing: border-box;
        }
        
        body {
            margin: 0;
            padding: 0;
            font-family: 'Space Grotesk', sans-serif;
            background: #fff;
            color: #1a1a2e;
            -webkit-print-color-adjust: exact;
        }
        
        .slide {
            width: 1122px;
            height: 793px;
            position: relative;
            overflow: hidden;
            page-break-after: always;
            display: flex;
            flex-direction: column;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            color: #ffffff;
            padding: 50px 60px;
        }

        .slide:last-child {
            page-break-after: auto;
        }

        /* Dynamic Background Elements */
        .bg-blob-1 {
            position: absolute;
            top: -150px;
            left: -100px;
            width: 500px;
            height: 500px;
            border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
            background: rgba(255, 255, 255, 0.08);
            filter: blur(2px);
        }
        
        .bg-blob-2 {
            position: absolute;
            bottom: -100px;
            right: -80px;
            width: 400px;
            height: 400px;
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
            background: rgba(255, 255, 255, 0.06);
            filter: blur(2px);
        }

        .bg-grid {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
            background-size: 40px 40px;
        }

        .floating-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            overflow: hidden;
        }

        .shape-circle {
            position: absolute;
            border-radius: 50%;
            border: 2px solid rgba(255,255,255,0.15);
        }

        .shape-1 { width: 80px; height: 80px; top: 15%; right: 10%; }
        .shape-2 { width: 40px; height: 40px; bottom: 20%; left: 15%; background: rgba(255,255,255,0.1); }
        .shape-3 { width: 120px; height: 120px; bottom: 30%; right: 25%; border-style: dashed; }

        .slide-header {
            margin-bottom: 30px;
            position: relative;
            z-index: 10;
        }

        .tag {
            display: inline-block;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        h1 {
            font-size: 52px;
            margin: 0;
            color: #ffffff;
            font-weight: 700;
            letter-spacing: -1px;
            line-height: 1.1;
            text-shadow: 0 4px 30px rgba(0,0,0,0.15);
        }

        /* Default Content (Full Width) */
        .slide-content {
            font-size: 22px;
            line-height: 1.6;
            color: rgba(255, 255, 255, 0.95);
            flex-grow: 1;
            position: relative;
            z-index: 10;
        }

        .slide-content p {
            margin: 0 0 16px 0;
            max-width: 900px;
        }

        .slide-content ul {
            padding-left: 0;
            list-style: none;
            margin: 0;
        }

        .slide-content li {
            margin-bottom: 14px;
            padding-left: 35px;
            position: relative;
        }

        .slide-content li::before {
            content: '→';
            position: absolute;
            left: 0;
            color: rgba(255, 255, 255, 0.7);
            font-weight: 700;
        }

        /* Split Layout for Images */
        .slide-body-split {
            display: flex;
            gap: 45px;
            flex-grow: 1;
            align-items: center;
            position: relative;
            z-index: 10;
        }

        .split-text {
            flex: 1;
            font-size: 18px;
            line-height: 1.7;
            color: rgba(255, 255, 255, 0.95);
        }

        .split-text p {
            margin: 0 0 14px 0;
        }

        .split-text ul {
            padding-left: 0;
            list-style: none;
            margin: 0;
        }

        .split-text li {
            margin-bottom: 12px;
            padding-left: 30px;
            position: relative;
        }

        .split-text li::before {
            content: '✦';
            position: absolute;
            left: 0;
            font-size: 12px;
            color: rgba(255, 255, 255, 0.6);
        }

        .split-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .image-frame {
            position: relative;
            padding: 8px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.25);
        }

        .split-image img {
            max-width: 100%;
            max-height: 460px;
            border-radius: 18px;
            object-fit: cover;
            display: block;
        }
        
        .slide-footer {
            position: absolute;
            bottom: 30px;
            left: 60px;
            right: 60px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 12px;
            color: rgba(255, 255, 255, 0.5);
            z-index: 10;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .slide-number-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 14px;
            color: #fff;
        }
    </style>
</head>
<body>
    {{#each slides}}
    <div class="slide">
        <div class="bg-blob-1"></div>
        <div class="bg-blob-2"></div>
        <div class="bg-grid"></div>
        <div class="floating-shapes">
            <div class="shape-circle shape-1"></div>
            <div class="shape-circle shape-2"></div>
            <div class="shape-circle shape-3"></div>
        </div>
        
        <div class="slide-header">
            <div class="tag">{{../topic}}</div>
            <h1>{{this.title}}</h1>
        </div>
        {{#if this.imageUrl}}
        <div class="slide-body-split">
            <div class="split-text">
                {{{this.content}}}
            </div>
            <div class="split-image">
                <div class="image-frame">
                    <img src="{{this.imageUrl}}" alt="{{this.title}} image">
                </div>
            </div>
        </div>
        {{else}}
        <div class="slide-content">
            {{{this.content}}}
        </div>
        {{/if}}
        <div class="slide-footer">
            <span>Creative Presentation</span>
            <div class="slide-number-circle">{{addOne @index}}</div>
        </div>
    </div>
    {{/each}}
</body>
</html>
