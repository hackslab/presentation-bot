<!DOCTYPE html>
<html>
<head>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;700&display=swap');
        
        body {
            margin: 0;
            padding: 0;
            font-family: 'Outfit', sans-serif;
            background: #fff;
            color: #333;
            -webkit-print-color-adjust: exact;
        }
        
        .slide {
            width: 1122px; /* A4 Landscape pixels at 96dpi approx */
            height: 793px;
            position: relative;
            overflow: hidden;
            page-break-after: always;
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            color: white;
            padding: 40px;
        }

        .slide:last-child {
            page-break-after: auto;
        }

        .slide-header {
            margin-bottom: 25px;
            border-bottom: 3px solid #6366f1;
            padding-bottom: 15px;
            flex-shrink: 0;
        }

        h1 {
            font-size: 48px;
            margin: 0;
            color: #f8fafc;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        /* Default Content (Full Width) */
        .slide-content {
            font-size: 24px;
            line-height: 1.4;
            color: #e2e8f0;
            flex-grow: 1;
        }

        /* Split Layout for Images */
        .slide-body-split {
            display: flex;
            gap: 40px;
            height: 100%;
            align-items: center; /* Center content vertically */
        }

        .split-text {
            flex: 1;
            font-size: 18px; /* Slightly smaller text for split view */
            line-height: 1.5;
            color: #e2e8f0;
        }

        .split-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .split-image img {
            max-width: 100%;
            max-height: 500px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.5);
            object-fit: cover;
        }

        .slide-content p, .split-text p {
            margin-bottom: 12px;
        }

        .slide-content ul, .split-text ul {
            padding-left: 40px;
        }

        .slide-content li, .split-text li {
            margin-bottom: 8px;
        }
        
        .slide-footer {
            position: absolute;
            bottom: 30px;
            right: 60px;
            font-size: 14px;
            color: #64748b;
        }
        
        /* Decoration Circle */
        .decoration {
            position: absolute;
            top: -100px;
            right: -100px;
            width: 300px;
            height: 300px;
            border-radius: 50%;
            background: rgba(99, 102, 241, 0.1);
            z-index: 0;
        }
    </style>
</head>
<body>
    {{#each slides}}
    <div class="slide">
        <div class="decoration"></div>
        <div class="slide-header" style="z-index: 1; position: relative;">
            <h1>{{this.title}}</h1>
        </div>
        {{#if this.imageUrl}}
        <div style="flex-grow: 1; z-index: 1; position: relative;">
            <div class="slide-body-split">
                <div class="split-text">
                    {{{this.content}}}
                </div>
                <div class="split-image">
                    <img src="{{this.imageUrl}}" alt="{{this.title}} image">
                </div>
            </div>
        </div>
        {{else}}
        <div class="slide-content" style="z-index: 1; position: relative;">
            {{{this.content}}}
        </div>
        {{/if}}
        <div class="slide-footer">
            {{../topic}} - Slide {{addOne @index}}
        </div>
    </div>
    {{/each}}
</body>
</html>
