<!DOCTYPE html>
<html>
<head>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        * {
            box-sizing: border-box;
        }
        
        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: #ffffff;
            color: #0a0a0a;
            -webkit-print-color-adjust: exact;
        }
        
        .slide {
            width: 1122px;
            height: 793px;
            position: relative;
            overflow: hidden;
            page-break-after: always;
            display: flex;
            flex-direction: column;
            background: linear-gradient(180deg, #fafafa 0%, #f5f5f5 100%);
            color: #0a0a0a;
            padding: 60px 70px;
        }

        .slide:last-child {
            page-break-after: auto;
        }

        /* Elegant geometric accent */
        .accent-line {
            position: absolute;
            top: 0;
            left: 0;
            width: 8px;
            height: 100%;
            background: linear-gradient(180deg, #0a0a0a 0%, #404040 50%, #0a0a0a 100%);
        }

        .accent-dot {
            position: absolute;
            top: 60px;
            right: 70px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #0a0a0a;
        }

        .slide-header {
            margin-bottom: 40px;
            padding-left: 20px;
            border-left: 4px solid #0a0a0a;
            flex-shrink: 0;
        }

        h1 {
            font-size: 44px;
            margin: 0;
            color: #0a0a0a;
            font-weight: 600;
            letter-spacing: -1.5px;
            line-height: 1.1;
        }

        .slide-subtitle {
            font-size: 14px;
            color: #666;
            margin-top: 8px;
            text-transform: uppercase;
            letter-spacing: 3px;
            font-weight: 500;
        }

        /* Default Content (Full Width) */
        .slide-content {
            font-size: 22px;
            line-height: 1.7;
            color: #333333;
            flex-grow: 1;
            padding-left: 20px;
        }

        .slide-content p {
            margin: 0 0 18px 0;
            max-width: 900px;
        }

        .slide-content ul {
            padding-left: 24px;
            margin: 0;
        }

        .slide-content li {
            margin-bottom: 14px;
            position: relative;
        }

        .slide-content li::marker {
            color: #0a0a0a;
        }

        /* Split Layout for Images */
        .slide-body-split {
            display: flex;
            gap: 50px;
            flex-grow: 1;
            align-items: center;
        }

        .split-text {
            flex: 1;
            font-size: 19px;
            line-height: 1.7;
            color: #333333;
            padding-left: 20px;
        }

        .split-text p {
            margin: 0 0 16px 0;
        }

        .split-text ul {
            padding-left: 24px;
            margin: 0;
        }

        .split-text li {
            margin-bottom: 12px;
        }

        .split-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .split-image img {
            max-width: 100%;
            max-height: 480px;
            object-fit: cover;
            border: none;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
        }
        
        .slide-footer {
            position: absolute;
            bottom: 35px;
            right: 70px;
            font-size: 11px;
            color: #999;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 500;
        }

        .slide-number {
            position: absolute;
            bottom: 35px;
            left: 70px;
            font-size: 48px;
            font-weight: 700;
            color: rgba(0, 0, 0, 0.06);
            letter-spacing: -2px;
        }
    </style>
</head>
<body>
    {{#each slides}}
    <div class="slide">
        <div class="accent-line"></div>
        <div class="accent-dot"></div>
        <div class="slide-number">{{addOne @index}}</div>
        
        <div class="slide-header">
            <h1>{{this.title}}</h1>
        </div>
        {{#if this.imageUrl}}
        <div class="slide-body-split">
            <div class="split-text">
                {{{this.content}}}
            </div>
            <div class="split-image">
                <img src="{{this.imageUrl}}" alt="{{this.title}} image">
            </div>
        </div>
        {{else}}
        <div class="slide-content">
            {{{this.content}}}
        </div>
        {{/if}}
        <div class="slide-footer">
            {{../topic}}
        </div>
    </div>
    {{/each}}
</body>
</html>
